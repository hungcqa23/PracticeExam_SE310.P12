@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model ecommerce_web.Models.TUser

@{
    ViewData["Title"] = "Sua Nguoi Dung";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h1>Sửa người dùng</h1>

<h4>TUser</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post" asp-action="SuaNguoiDung">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <!-- Username Field -->
            <div class="form-group">
                <label asp-for="Username" class="control-label"></label>
                <input asp-for="Username" class="form-control" />
                <span asp-validation-for="Username" class="text-danger"></span>
            </div>

            <!-- Password Field -->
            <div class="form-group">
                <label asp-for="Password" class="control-label"></label>
                <input asp-for="Password" type="password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <!-- LoaiUser Field -->
            <div class="form-group">
                <label asp-for="LoaiUser" class="control-label"></label>
                <input asp-for="LoaiUser" class="form-control" />
                <span asp-validation-for="LoaiUser" class="text-danger"></span>
            </div>

            <!-- Submit Button -->
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>